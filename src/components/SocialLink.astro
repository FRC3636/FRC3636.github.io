---
import type { IconDefinition } from "@fortawesome/free-brands-svg-icons";
import Icon from "./Icon.astro"

export interface Props {
    icon: IconDefinition;
    href: string;
    title: string;
}

const { icon, href, title } = Astro.props;
---

<a
    href={href}
    title={title}
    aria-label={title}
    target="_blank"
    rel="noopener noreferrer"
    class="social-link"
>
    <Icon symbol={icon} />
</a>

<style>
    .social-link {
        display: inline-flex;
        justify-content: center;
        align-items: center;
        position: relative;
        flex-shrink: 0;

        font-size: 1.25rem;

        padding: 0.25rem;

        border: 2px solid var(--accent);
        color: var(--accent);
        border-radius: 100%;
        transition:
            color,
            background-color 0.15s ease-in-out;
    }

    .social-link:hover {
        background-color: var(--accent);
        color: var(--bg-secondary);
    }

    @media (prefers-color-scheme: dark) {
        .social-link {
            border-color: var(--col-body);
            color: var(--col-body);
        }

        .social-link:hover {
            background-color: var(--col-body);
            color: var(--bg-secondary);
        }
    }
</style>
